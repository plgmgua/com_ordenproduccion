<?xml version="1.0" encoding="utf-8"?>
<metadata>
    <layout title="COM_ORDENPRODUCCION_ASISTENCIA_VIEW_DEFAULT_TITLE" option="COM_ORDENPRODUCCION_ASISTENCIA_VIEW_DEFAULT_OPTION">
        <help
            key="JHELP_MENUS_MENU_ITEM_WEBLINK_CATEGORIES"
        />
