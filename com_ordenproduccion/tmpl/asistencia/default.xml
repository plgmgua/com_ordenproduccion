                default="1"
                >
                <option value="0">JNO</option>
                <option value="1">JYES</option>
            </field>

            <field
                name="allow_manual_entry"
                type="radio"
                label="COM_ORDENPRODUCCION_ASISTENCIA_ALLOW_MANUAL_ENTRY"
                description="COM_ORDENPRODUCCION_ASISTENCIA_ALLOW_MANUAL_ENTRY_DESC"
                class="btn-group btn-group-yesno"
                default="1"
                >
                <option value="0">JNO</option>
                <option value="1">JYES</option>
            </field>

            <field
                name="items_per_page"
                type="number"
                label="COM_ORDENPRODUCCION_ASISTENCIA_ITEMS_PER_PAGE"
                description="COM_ORDENPRODUCCION_ASISTENCIA_ITEMS_PER_PAGE_DESC"
                default="20"
                min="5"
                max="100"
            />

        </fieldset>

        <!-- Advanced options. -->
        <fieldset name="advanced" label="JGLOBAL_FIELDSET_ADVANCED_OPTIONS">

            <field
                name="layout_type"
                type="hidden"
                default="asistencia"
            />

        </fieldset>

    </fields>
