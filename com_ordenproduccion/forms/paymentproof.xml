<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="payment_proof" label="COM_ORDENPRODUCCION_PAYMENT_PROOF_FORM">
        <field
            name="order_id"
            type="hidden"
            default="0"
        />
        
        <field
            name="payment_type"
            type="list"
            label="COM_ORDENPRODUCCION_PAYMENT_TYPE"
            description="COM_ORDENPRODUCCION_PAYMENT_TYPE_DESC"
            required="true"
            class="form-control"
            default=""
        >
            <option value="">COM_ORDENPRODUCCION_SELECT_PAYMENT_TYPE</option>
            <option value="efectivo">COM_ORDENPRODUCCION_PAYMENT_TYPE_CASH</option>
            <option value="cheque">COM_ORDENPRODUCCION_PAYMENT_TYPE_CHECK</option>
            <option value="transferencia">COM_ORDENPRODUCCION_PAYMENT_TYPE_TRANSFER</option>
            <option value="deposito">COM_ORDENPRODUCCION_PAYMENT_TYPE_DEPOSIT</option>
        </field>

        <field
            name="bank"
            type="list"
            label="COM_ORDENPRODUCCION_BANK"
            description="COM_ORDENPRODUCCION_BANK_DESC"
            class="form-control"
            default=""
        >
            <option value="">COM_ORDENPRODUCCION_SELECT_BANK</option>
            <!-- 
                Bank options are now loaded dynamically from the database via PaymentProofModel::getBankOptions()
                Hardcoded options have been removed to ensure database is the single source of truth.
                Banks are managed via Component > Orden Produccion > Administracion > Herramientas > Bancos
            -->
        </field>

        <field
            name="document_number"
            type="text"
            label="COM_ORDENPRODUCCION_DOCUMENT_NUMBER"
            description="COM_ORDENPRODUCCION_DOCUMENT_NUMBER_DESC"
            required="true"
            class="form-control"
            maxlength="255"
            size="50"
        />

        <field
            name="payment_proof_file"
            type="file"
            label="COM_ORDENPRODUCCION_PAYMENT_PROOF_FILE"
            description="COM_ORDENPRODUCCION_PAYMENT_PROOF_FILE_DESC"
            class="form-control"
            accept=".jpg,.jpeg,.png,.pdf"
        />
    </fieldset>
</form>
