<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="details" label="COM_ORDENPRODUCCION_EMPLOYEE_DETAILS">
        <field
            name="id"
            type="number"
            label="JGLOBAL_FIELD_ID_LABEL"
            default="0"
            class="readonly"
            readonly="true"
        />

        <field
            name="cardno"
            type="text"
            label="COM_ORDENPRODUCCION_EMPLOYEE_CARDNO"
            description="COM_ORDENPRODUCCION_EMPLOYEE_CARDNO_DESC"
            class="inputbox"
            size="20"
            required="true"
        />

        <field
            name="personname"
            type="text"
            label="COM_ORDENPRODUCCION_EMPLOYEE_PERSONNAME"
            description="COM_ORDENPRODUCCION_EMPLOYEE_PERSONNAME_DESC"
            class="inputbox"
            size="40"
            required="true"
        />

        <field
            name="employee_number"
            type="text"
            label="COM_ORDENPRODUCCION_EMPLOYEE_NUMBER"
            description="COM_ORDENPRODUCCION_EMPLOYEE_NUMBER_DESC"
            class="inputbox"
            size="20"
        />

        <field
            name="group_id"
            type="sql"
            label="COM_ORDENPRODUCCION_EMPLOYEE_GROUP"
            description="COM_ORDENPRODUCCION_EMPLOYEE_GROUP_DESC"
            query="SELECT id, name FROM #__ordenproduccion_employee_groups WHERE state = 1 ORDER BY ordering"
            key_field="id"
            value_field="name"
            required="true"
        >
            <option value="">COM_ORDENPRODUCCION_EMPLOYEE_SELECT_GROUP</option>
        </field>

        <field
            name="department"
            type="text"
            label="COM_ORDENPRODUCCION_EMPLOYEE_DEPARTMENT"
            description="COM_ORDENPRODUCCION_EMPLOYEE_DEPARTMENT_DESC"
            class="inputbox"
            size="30"
        />

        <field
            name="position"
            type="text"
            label="COM_ORDENPRODUCCION_EMPLOYEE_POSITION"
            description="COM_ORDENPRODUCCION_EMPLOYEE_POSITION_DESC"
            class="inputbox"
            size="30"
        />

        <field
            name="email"
            type="email"
            label="COM_ORDENPRODUCCION_EMPLOYEE_EMAIL"
            description="COM_ORDENPRODUCCION_EMPLOYEE_EMAIL_DESC"
            class="inputbox"
            size="30"
            validate="email"
        />

        <field
            name="phone"
            type="tel"
            label="COM_ORDENPRODUCCION_EMPLOYEE_PHONE"
            description="COM_ORDENPRODUCCION_EMPLOYEE_PHONE_DESC"
            class="inputbox"
            size="20"
        />

        <field
            name="hire_date"
            type="calendar"
            label="COM_ORDENPRODUCCION_EMPLOYEE_HIRE_DATE"
            description="COM_ORDENPRODUCCION_EMPLOYEE_HIRE_DATE_DESC"
            format="%Y-%m-%d"
        />

        <field
            name="notes"
            type="textarea"
            label="COM_ORDENPRODUCCION_EMPLOYEE_NOTES"
            description="COM_ORDENPRODUCCION_EMPLOYEE_NOTES_DESC"
            rows="3"
            cols="40"
        />

        <field
            name="active"
            type="list"
            label="COM_ORDENPRODUCCION_EMPLOYEE_ACTIVE"
            description="COM_ORDENPRODUCCION_EMPLOYEE_ACTIVE_DESC"
            class="inputbox"
            default="1"
            required="true"
        >
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>

        <field
            name="state"
            type="list"
            label="JSTATUS"
            description="JFIELD_PUBLISHED_DESC"
            class="inputbox"
            default="1"
            required="true"
        >
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
        </field>

        <field
            name="created"
            type="calendar"
            label="JGLOBAL_FIELD_CREATED_LABEL"
            class="readonly"
            readonly="true"
            format="%Y-%m-%d %H:%M:%S"
        />

        <field
            name="created_by"
            type="user"
            label="JGLOBAL_FIELD_CREATED_BY_LABEL"
            class="readonly"
            readonly="true"
        />

        <field
            name="modified"
            type="calendar"
            label="JGLOBAL_FIELD_MODIFIED_LABEL"
            class="readonly"
            readonly="true"
            format="%Y-%m-%d %H:%M:%S"
        />

        <field
            name="modified_by"
            type="user"
            label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
            class="readonly"
            readonly="true"
        />
    </fieldset>
</form>

