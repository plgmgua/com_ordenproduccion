<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="details" label="COM_ORDENPRODUCCION_EMPLOYEE_DETAILS">
        <field
            name="id"
            type="number"
            label="JGLOBAL_FIELD_ID_LABEL"
            default="0"
            class="readonly"
            readonly="true"
        />

        <field
            name="cardno"
            type="text"
            label="COM_ORDENPRODUCCION_EMPLOYEE_CARDNO"
            description="COM_ORDENPRODUCCION_EMPLOYEE_CARDNO_DESC"
            class="inputbox"
            size="20"
            required="true"
        />

        <field
            name="personname"
            type="text"
            label="COM_ORDENPRODUCCION_EMPLOYEE_PERSONNAME"
            description="COM_ORDENPRODUCCION_EMPLOYEE_PERSONNAME_DESC"
            class="inputbox"
            size="40"
            required="true"
        />

        <field
            name="group_id"
            type="sql"
            label="COM_ORDENPRODUCCION_EMPLOYEE_GROUP"
            description="COM_ORDENPRODUCCION_EMPLOYEE_GROUP_DESC"
            query="SELECT id, name FROM #__ordenproduccion_employee_groups WHERE state = 1 ORDER BY ordering"
            key_field="id"
            value_field="name"
            required="true"
        >
            <option value="">COM_ORDENPRODUCCION_EMPLOYEE_SELECT_GROUP</option>
        </field>

        <field
            name="department"
            type="text"
            label="COM_ORDENPRODUCCION_EMPLOYEE_DEPARTMENT"
            description="COM_ORDENPRODUCCION_EMPLOYEE_DEPARTMENT_DESC"
            class="inputbox"
            size="30"
        />

        <field
            name="position"
            type="text"
            label="COM_ORDENPRODUCCION_EMPLOYEE_POSITION"
            description="COM_ORDENPRODUCCION_EMPLOYEE_POSITION_DESC"
            class="inputbox"
            size="30"
        />

        <field
            name="active"
            type="list"
            label="COM_ORDENPRODUCCION_EMPLOYEE_ACTIVE"
            description="COM_ORDENPRODUCCION_EMPLOYEE_ACTIVE_DESC"
            class="inputbox"
            default="1"
            required="true"
        >
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>

        <field
            name="state"
            type="list"
            label="JSTATUS"
            description="JFIELD_PUBLISHED_DESC"
            class="inputbox"
            default="1"
            required="true"
        >
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
        </field>

        <field
            name="created"
            type="calendar"
            label="JGLOBAL_FIELD_CREATED_LABEL"
            class="readonly"
            readonly="true"
            format="%Y-%m-%d %H:%M:%S"
            filter="unset"
        />

        <field
            name="created_by"
            type="user"
            label="JGLOBAL_FIELD_CREATED_BY_LABEL"
            class="readonly"
            readonly="true"
            filter="unset"
        />

        <field
            name="modified"
            type="calendar"
            label="JGLOBAL_FIELD_MODIFIED_LABEL"
            class="readonly"
            readonly="true"
            format="%Y-%m-%d %H:%M:%S"
            filter="unset"
        />

        <field
            name="modified_by"
            type="user"
            label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
            class="readonly"
            readonly="true"
            filter="unset"
        />
    </fieldset>
</form>

