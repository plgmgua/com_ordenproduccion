<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter">
        <field
            name="search"
            type="text"
            label="COM_ORDENPRODUCCION_FILTER_SEARCH_LABEL"
            description="COM_ORDENPRODUCCION_FILTER_SEARCH_DESC"
            hint="JSEARCH_FILTER"
        />

        <field
            name="published"
            type="list"
            label="JOPTION_SELECT_PUBLISHED"
            onchange="this.form.submit();"
            default=""
        >
            <option value="">JOPTION_SELECT_PUBLISHED</option>
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
        </field>

        <field
            name="group_id"
            type="sql"
            label="COM_ORDENPRODUCCION_EMPLOYEE_GROUP"
            query="SELECT id, name FROM #__ordenproduccion_employee_groups WHERE state = 1 ORDER BY ordering"
            key_field="id"
            value_field="name"
            onchange="this.form.submit();"
        >
            <option value="">COM_ORDENPRODUCCION_EMPLOYEE_SELECT_GROUP</option>
        </field>

        <field
            name="active"
            type="list"
            label="COM_ORDENPRODUCCION_EMPLOYEE_ACTIVE"
            onchange="this.form.submit();"
            default=""
        >
            <option value="">JOPTION_SELECT_ACTIVE</option>
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>
    </fields>

    <fields name="list">
        <field
            name="fullordering"
            type="list"
            label="COM_ORDENPRODUCCION_LIST_FULL_ORDERING"
            description="COM_ORDENPRODUCCION_LIST_FULL_ORDERING_DESC"
            onchange="this.form.submit();"
            default="a.personname ASC"
        >
            <option value="">JGLOBAL_SORT_BY</option>
            <option value="a.personname ASC">COM_ORDENPRODUCCION_EMPLOYEE_PERSONNAME_ASC</option>
            <option value="a.personname DESC">COM_ORDENPRODUCCION_EMPLOYEE_PERSONNAME_DESC</option>
            <option value="a.cardno ASC">COM_ORDENPRODUCCION_EMPLOYEE_CARDNO_ASC</option>
            <option value="a.cardno DESC">COM_ORDENPRODUCCION_EMPLOYEE_CARDNO_DESC</option>
            <option value="a.department ASC">COM_ORDENPRODUCCION_EMPLOYEE_DEPARTMENT_ASC</option>
            <option value="a.department DESC">COM_ORDENPRODUCCION_EMPLOYEE_DEPARTMENT_DESC</option>
            <option value="a.position ASC">COM_ORDENPRODUCCION_EMPLOYEE_POSITION_ASC</option>
            <option value="a.position DESC">COM_ORDENPRODUCCION_EMPLOYEE_POSITION_DESC</option>
            <option value="a.active ASC">COM_ORDENPRODUCCION_EMPLOYEE_ACTIVE_ASC</option>
            <option value="a.active DESC">COM_ORDENPRODUCCION_EMPLOYEE_ACTIVE_DESC</option>
            <option value="a.id ASC">JGRID_HEADING_ID_ASC</option>
            <option value="a.id DESC">JGRID_HEADING_ID_DESC</option>
        </field>

        <field
            name="limit"
            type="limitbox"
            class="input-mini"
            default="25"
            label="COM_ORDENPRODUCCION_LIST_LIMIT"
            description="COM_ORDENPRODUCCION_LIST_LIMIT_DESC"
            onchange="this.form.submit();"
        />
    </fields>
</form>

